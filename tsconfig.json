{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react",
        "target": "ES6",
        "moduleResolution": "Node"
    }
}